@{
    Layout = "_PayxLayout";
}
@model IEnumerable<PayxApi.DTOs.EmployeeDTO>
<main id="main" class="main">

    <div class="pagetitle">
      <h1>Data Tables</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Tables</li>
          <li class="breadcrumb-item active">Data</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Datatables</h5>
              <p>Add lightweight datatables to your project with using the <a href="https://github.com/fiduswriter/Simple-DataTables" target="_blank">Simple DataTables</a> library. Just add <code>.datatable</code> class name to any table you wish to conver to a datatable</p>
              @ViewBag.Success
              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Card-Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Department</th>
                    <th scope="col">Position</th>
                    <th scope="col">Details</th>
                    <th scope="col">Personal Details</th>
                    <th scope="col">Address</th>
                    <th scope="col">Bank</th>
                    <th scope="col">Delete</th>
                  </tr>
                </thead>
                <tbody>
            @foreach (var employee in Model)
            {
                
            
                  <tr>
                    <th scope="row">@Html.DisplayFor(e => employee.Id)</th>
                    <th scope="row">@Html.DisplayFor(e => employee.EmployeeCardId)</th>
                    <td>@Html.DisplayFor(e => employee.FullName)</td>
                    <td>@Html.DisplayFor(e => employee.DepartmentName)</td>
                    <td>@Html.DisplayFor(e => employee.PositionName)</td>
                    <td><a asp-action="Details" asp-controller="Employee" asp-route-employeeId="@employee.Id" class="btn btn-primary">Details</a></td>
                    <td><a asp-action="UpdateEmployee" asp-controller="Employee" asp-route-employeeId="@employee.Id" class="btn btn-primary">Personal Details</a></td>
                    <td><a asp-action="UpdateAddress" asp-controller="Address" asp-route-employeeId="@employee.Id" class="btn btn-primary">Address</a></td>
                    <td><a asp-action="UpdateAccountDetails" asp-controller="AccountDetails" asp-route-employeeId="@employee.Id" class="btn btn-primary">Bank</a></td>
                    
                    <td><a asp-action="Delete" asp-controller="Employee" asp-route-employeeId="@employee.Id" type="button" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a></td>
                  </tr>
            }
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->