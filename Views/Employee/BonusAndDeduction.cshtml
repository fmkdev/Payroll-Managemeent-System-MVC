                                <!-- List group with active and disabled items -->
                                <ul class="list-group">
                                    <li class="list-group-item active" aria-current="true">BONUSES</li>
                                    @foreach (var item in Model.Bonuses)
                                    {
                                        <li class="list-group-item"><b>Bonus Name: </b> @item.BonusName</li>
                                        <li class="list-group-item"><b>Amount: </b> @item.Amount</li>
                                        <li class="list-group-item"><b>Date: </b> @item.Date</li>
                                        <li class="list-group-item" aria-disabled="true"></li>
                                        <li class="list-group-item" aria-disabled="true"></li>
                                    }
                                </ul><!-- End ist group with active and disabled items -->

                            </div>
                        </div>
                        <!-- End Table with stripped rows -->

                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"></h5>

                                <!-- List group with active and disabled items -->
                                <ul class="list-group">
                                    <li class="list-group-item active" aria-current="true">DEDUCTIONS</li>
                                    @foreach (var item in Model.OtherDeductions)
                                    {
                                        <li class="list-group-item"><b>Deduction Name: </b> @item.DeductionName</li>
                                        <li class="list-group-item"><b>Amount: </b> @item.Amount</li>
                                        <li class="list-group-item"><b>Date: </b> @item.Date</li>
                                        <li class="list-group-item" aria-disabled="true"></li>
                                        <li class="list-group-item" aria-disabled="true"></li>
                                    }

                                </ul><!-- End ist group with active and disabled items -->

                            </div>
                        </div>

