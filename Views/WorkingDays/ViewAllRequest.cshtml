@{
    Layout = "_PayxLayout";
}
@model IEnumerable<PayxApi.DTOs.WorkingDaysDTO>

<main id="main" class="main">

    <div class="pagetitle">
      <h1>Data Tables</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Tables</li>
          <li class="breadcrumb-item active">Data</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Datatables</h5>
              <p>Add lightweight datatables to your project with using the <a href="https://github.com/fiduswriter/Simple-DataTables" target="_blank">Simple DataTables</a> library. Just add <code>.datatable</code> class name to any table you wish to conver to a datatable</p>

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">DATE</th>
                    <th scope="col">FULL NAME</th>
                    <th scope="col">CARD ID</th>
                    <th scope="col">REQUEST</th>
                    <th scope="col">REQUEST STATUS</th>
                    <th scope="col">DAY STATUS</th>
                    <th scope="col">REJECT</th>
                    <th scope="col">APPROVE</th>
                  </tr>
                </thead>
                <tbody>
            @foreach (var calendar in Model)
            {
                  <tr>
                    <th scope="row">@Html.DisplayFor(e => calendar.WorkDate)</th>
                    <th scope="row">@Html.DisplayFor(e => calendar.EmployeeFullName)</th>
                    <td>@Html.DisplayFor(e => calendar.EmployeeCardId)</td>
                    <td>@Html.DisplayFor(e => calendar.Request)</td>
                    <td>@Html.DisplayFor(e => calendar.RequestStatus)</td>                    
                    <td>@Html.DisplayFor(e => calendar.DayStatus)</td>
                    <td><a asp-action="RejectRequest" asp-controller="WorkingDays" asp-route-employeeId="@calendar.EmployeeId" type="button" class="btn btn-danger">REJECT</a></td>
                    <td><a asp-action="ApproveRequest" asp-controller="WorkingDays" asp-route-employeeId="@calendar.EmployeeId" type="button" class="btn btn-success">APPROVE</a></td>            
                  </tr>
            }
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->